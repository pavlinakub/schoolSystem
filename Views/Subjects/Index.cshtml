@model IEnumerable<Subject>//co pujde videt v prohlizeci ...pouzivam html jazyk
<div>
    <a class="btn btn-success" asp-action="Create">Create new subject</a>
</div>


<hr /> @* horizontalni cara*@

<h3>List of subjects:</h3>
@foreach (var item in Model)
{
    <div class="border border-1 border-dark p-2 "> @*//ramecek*@
        <h5>@item.Id @item.Name</h5>  @*//nadpis*@
        
       
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>       @*odkaz ktery dostane class buton a warning a denger je barva(tak se stylizuji tlacitka v bootstrapu)*@
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
    </div>
}



